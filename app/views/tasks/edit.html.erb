<div class="container mt-4">
<h1>Edit task</h1>
<%= form_with model: @task do |f| %>
    <div class="mb-2">
        <%= f.label :title, "Title:", class: 'form-label fw-bold' %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="mb-2">
        <%= f.label :details, "Details:", class: 'form-label fw-bold' %>
        <%= f.text_area :details, class: 'form-control' %>
    </div>
    <div class="form-check mt-2">
        <%= f.check_box :completed, class: 'form-check-input' %>
        <%= f.label :completed, "Completed:", class: 'form-check-label' %>
    </div>
    <%= f.submit "Update Task", class: 'btn btn-primary mt-2 fw-bold' %>
<% end %>
<hr />
<%= link_to tasks_path do %>
  <i class="fa-solid fa-clock-rotate-left"></i><span>&#8201;Back to list</span>
<% end %>
</div>